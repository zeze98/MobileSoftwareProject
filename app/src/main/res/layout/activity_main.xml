<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memo"
                android:textSize="0sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t1"
                android:textSize="0sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t2"
                android:textSize="0sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t3"
                android:textSize="0sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t4"
                android:textSize="0sp"/>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:padding="20dp"
                    android:text="식단 정보"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dalseohealingmedium"
                    android:paddingLeft="40dp"
                    android:id="@+id/tv_date"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="식단"
                    android:textColor="@color/black"
                    android:fontFamily="@font/font"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"/>

            </LinearLayout>

            //아침식단
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="315dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아침"
                    android:fontFamily="@font/font"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingLeft="50dp"
                    android:paddingTop="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="60dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="100dp"
                        android:layout_gravity="top|right"
                        android:backgroundTint="@color/white"
                        app:cardElevation="10dp"
                        android:id="@+id/cv_x1"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_food_add"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_m"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:padding="20dp"
                        android:visibility="gone"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_morning"
                        android:visibility="gone"/>


                    // 식단을 추가 했는데 이미지가 없을 때 해당 이미지뷰 표시
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_no_image_morning"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/ic_no_food_24"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="100dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        app:cardElevation="10dp"
                        android:id="@+id/cv_morning">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_food_add"/>
                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            // 점심 식단
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="315dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="점심"
                    android:fontFamily="@font/font"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingLeft="50dp"
                    android:paddingTop="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="60dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="8dp">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="100dp"
                        android:layout_gravity="top|right"
                        android:backgroundTint="@color/white"
                        app:cardElevation="10dp"
                        android:id="@+id/cv_x2"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_food_add"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_l"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:padding="20dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_lunch"
                        android:visibility="gone"/>

                    // 식단을 추가 했는데 이미지가 없을 때 해당 이미지뷰 표시
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_no_image_lunch"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/ic_no_food_24"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="100dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        app:cardElevation="10dp"
                        android:id="@+id/cv_lunch">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_food_add"/>
                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            // 저녁
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="315dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저녁"
                    android:fontFamily="@font/font"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingLeft="50dp"
                    android:paddingTop="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="60dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="8dp">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="100dp"
                        android:layout_gravity="top|right"
                        android:backgroundTint="@color/white"
                        app:cardElevation="10dp"
                        android:id="@+id/cv_x3"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_food_add"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/tv_d"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:padding="20dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_dinner"
                        android:visibility="gone"/>

                    // 식단을 추가 했는데 이미지가 없을 때 해당 이미지뷰 표시
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_no_image_dinner"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/ic_no_food_24"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="100dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        app:cardElevation="10dp"
                        android:id="@+id/cv_dinner">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_food_add"/>
                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            // 간식 식단
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="345dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="간식"
                    android:fontFamily="@font/font"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingLeft="50dp"
                    android:paddingTop="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="60dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="8dp">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="100dp"
                        android:layout_gravity="top|right"
                        android:backgroundTint="@color/white"
                        app:cardElevation="10dp"
                        android:id="@+id/cv_x4"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_food_add"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/tv_s"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:padding="20dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_snack"
                        android:visibility="gone"/>

                    // 식단을 추가 했는데 이미지가 없을 때 해당 이미지뷰 표시
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_no_image_snack"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/ic_no_food_24"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="100dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white"
                        app:cardElevation="10dp"
                        android:id="@+id/cv_snack">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_food_add"/>
                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>